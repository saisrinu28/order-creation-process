		<ee:transform doc:name="Transform Message" doc:id="4f3b723f-7b29-4bd7-966e-76387f50da78" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
	order: payload[0],
	customer: vars.customerPayload
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
    </flow>
    <flow name="post:\customerOrders:application\json:customer-order-api-config">
		<http:request method="POST" doc:name="orderRequest" doc:id="86490a9d-d1d8-4d2d-9742-c2e25dbb65d6" config-ref="HTTP_Request_configuration" path="/order-system/api/orders" target="orderResponse">
			<http:body ><![CDATA[#[payload.order]]]></http:body>
		</http:request>
		<http:request method="POST" doc:name="customerRequest" doc:id="faba58fa-6b52-404a-8892-7b0388e283ef" config-ref="HTTP_Request_configuration" path="/order-system/customer-api/customers" target="customerResponse">
			<http:body ><![CDATA[#[payload.customer]]]></http:body>
		</http:request>
		<logger level="INFO" message="post:\customerOrders:application\json:customer-order-api-config" />
