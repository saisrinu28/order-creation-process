		<set-variable value="#[%dw 2.0&#10;output application/json&#10;---&#10;[]]" doc:name="Set Variable" doc:id="c1adf15c-f43f-4b48-abe2-2e555f5d8970" variableName="customerOrders"/>
		<foreach doc:name="For Each" doc:id="a0e34dc3-e696-463f-be83-3d5ba7524ba1">
