    <flow name="put:\customerOrders\(orderId):application\json:customer-order-api-config">
        <ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core">
            <ee:variables>
                <ee:set-variable variableName="orderId">attributes.uriParams.'orderId'</ee:set-variable>
            </ee:variables>
        </ee:transform>
        <logger level="INFO" message="put:\customerOrders\(orderId):application\json:customer-order-api-config" />
    </flow>
    <flow name="get:\customerOrders:customer-order-api-config">
		<flow-ref doc:name="Flow Reference" doc:id="c5cb5086-fb62-40e3-9e60-ad059c17af0c" name="getCustOrders"/>
    </flow>
    <flow name="get:\customerOrders\(orderId):customer-order-api-config">
		<ee:transform xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core">
            <ee:variables>
                <ee:set-variable variableName="orderId">attributes.uriParams.'orderId'</ee:set-variable>
            </ee:variables>
        </ee:transform>
		<until-successful maxRetries="3" doc:name="Until Successful" doc:id="fc1db591-51d0-4181-9b33-828946df91ce" >
			<http:request method="GET" doc:name="Request" doc:id="1979c71d-cf2b-4224-8332-5351967d9eb7" config-ref="HTTP_Request_configuration" path="/order-system/api/orders">
			<http:uri-params><![CDATA[#[output application/java
---
{
	"orderId" : attributes.uriParams.orderId
}]]]></http:uri-params>
		</http:request>
		</until-successful>
		<logger level="INFO" doc:name="Logger" doc:id="87e4ed3a-3c01-4a70-9721-36880d8a422c" message="the response from Order API is #[payload]"/>
		<set-variable value="#[payload[0].CUSTOMERREF]" doc:name="Set Variable" doc:id="e00ef721-f587-40cc-bbec-c77ee12650e2" variableName="customerRef"/>
		<logger level="INFO" doc:name="Logger" doc:id="9b616598-ac4d-4901-a31c-caaa0d0b7085" message="#[vars.customerRef]"/>
