			<logger level="INFO" doc:name="Logger" doc:id="413ac499-d57f-42e3-80a0-f42b107e2270" message="retrieved from object store #[payload]"/>
			<ee:transform doc:name="Transform Message" doc:id="7b7555dc-fdc3-4f66-81eb-ed529dcfa912">
				<ee:message>
				</ee:message>
				<ee:variables>
					<ee:set-variable variableName="customerOrders"><![CDATA[%dw 2.0
output application/json
---
vars.customerOrders + payload]]></ee:set-variable>
				</ee:variables>
			</ee:transform>
		</foreach>
		<os:clear doc:name="Clear" doc:id="559fe660-cf6b-40de-9185-74ac19a14beb" objectStore="cust-order-os"/>
		<ee:transform doc:name="Transform Message" doc:id="e1f604e1-da8e-4356-ab89-caedde4ab42c" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
vars.customerOrders filter ((item, index) -> item !=null )]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<set-payload value="#[vars.customerOrders]" doc:name="Set Payload" doc:id="6c7f5b04-52f1-4139-a9bf-5323c1ef25fe" />
		<logger level="INFO" message="customer Orders are #[vars.customerOrders]" />
	</sub-flow>
