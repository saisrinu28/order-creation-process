			<http:uri-params><![CDATA[#[output application/java
---
{
	"custId" : vars.customerRef
}]]]></http:uri-params>
		</http:request>
	</sub-flow>
	<sub-flow name="getCustOrders" doc:id="b090530f-e160-4b24-b65d-0bb57d5edd30" >
		<http:request method="GET" doc:name="orderRequest" doc:id="a562e82e-48e6-4a8a-99f6-762e34b36788" config-ref="HTTP_Request_configuration" path="/order-system/api/orders">
		</http:request>
		<foreach doc:name="For Each" doc:id="8ac30338-0f09-469a-b633-d9488dc27282" collection="#[payload]">
			<set-variable value="#[payload.CUSTOMERREF]" doc:name="Set Variable" doc:id="6a017665-9b99-491f-bac4-0c578a30ad6b" variableName="customerRef" />
			<flow-ref doc:name="Flow Reference" doc:id="fd1ea89f-8349-4381-82b1-eeb7402a3692" name="customerRequestSubFlow" />
			<ee:transform doc:name="Transform Message" doc:id="750349b5-3a51-4e85-a5b0-0161c61c88ad">
				<ee:message>
					<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
	"order" : payload,
	"customer": vars.customerPayload
}]]></ee:set-payload>
				</ee:message>
			</ee:transform>
			<os:store doc:name="Store" doc:id="dab1018c-423f-42c8-8995-94fb088a61ba" key="#[vars.counter]" objectStore="cust-order-os">
